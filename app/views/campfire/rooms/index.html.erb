<h1>Rooms</h1>

<div style="margin-bottom: 20px;">
  <%= link_to "+ New Room", new_room_path, style: "padding: 10px 15px; background: #007bff; color: white; text-decoration: none; border-radius: 4px; display: inline-block; margin-right: 10px;" %>
  <%= link_to "ðŸ’¬ Ping User", new_direct_path, style: "padding: 10px 15px; background: #28a745; color: white; text-decoration: none; border-radius: 4px; display: inline-block;" %>
</div>

<% if @rooms.any? %>
  <ul>
    <% @rooms.each do |room| %>
      <li style="margin-bottom: 10px;">
        <%= link_to room.name || "DM with #{room.users.where.not(id: current_campfire_user.id).first&.email || 'User'}", room_path(room) %>
        <small style="color: #666;">(<%=room.type.demodulize %>)</small>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No rooms yet. <%= link_to "Create your first room!", new_room_path %></p>
<% end %>
