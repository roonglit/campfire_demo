<% @page_title = room_display_name(@room) %>
<% @body_class = "sidebar" %>
<% content_for :head do %>
  <meta name="current-room-id" content="<%= @room.id %>">
<% end %>

<%= render "campfire/rooms/show/nav", room: @room %>

<% content_for :sidebar, sidebar_turbo_frame_tag(src: user_sidebar_path) %>

<%= message_area_tag(@room) do %>
  <%= render "campfire/messages/template" %>

  <%= messages_tag(@room) do %>
    <%= render "campfire/rooms/show/invitation", room: @room %>
    <%= render partial: "campfire/messages/message", collection: @messages, cached: true %>
  <% end %>

  <%= turbo_stream_from @room, :messages %>
  <%= button_to_jump_to_newest_message %>
<% end %>

<%= render "campfire/rooms/show/composer", room: @room %>
