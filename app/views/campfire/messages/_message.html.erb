<div id="<%= dom_id(message) %>" style="padding: 10px; border-bottom: 1px solid #eee;">
  <strong><%= message.creator.email %></strong>
  <small><%= message.created_at.strftime("%B %d, %Y at %l:%M %p") %></small>

  <div id="<%= dom_id(message, :presentation) %>">
    <%= render "campfire/messages/presentation", message: message %>
  </div>

  <%= link_to "Edit", campfire.edit_room_message_path(message.room, message) %> |
  <%= link_to "Delete", campfire.room_message_path(message.room, message), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
</div>
